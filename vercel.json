{
  "version": 2,
  "public": true,
  "rewrites": [
    { "source": "/privacy", "destination": "/public/privacy.html" },
    { "source": "/terms", "destination": "/public/terms.html" },
    { "source": "/about", "destination": "/public/about.html" },
    { "source": "/contact", "destination": "/public/contact.html" },
    { "source": "/admin", "destination": "/public/admin.html" },
    { "source": "/pricing", "destination": "/public/pricing.html" },
    { "source": "/success", "destination": "/public/success.html" },
    { "source": "/sales", "destination": "/public/sales.html" },
    { "source": "/crm", "destination": "/public/sales.html" },
    { "source": "/analytics", "destination": "/public/analytics.html" },
    { "source": "/", "destination": "/public/index.html" }
  ],
  "headers": [
    {
      "source": "/api/(.*)",
      "headers": [
        { "key": "Access-Control-Allow-Origin", "value": "*" },
        { "key": "Access-Control-Allow-Methods", "value": "GET, POST, PUT, DELETE, OPTIONS" },
        { "key": "Access-Control-Allow-Headers", "value": "Content-Type, Authorization" }
      ]
    }
  ],
  "crons": [
    {
      "path": "/api/cron/process-sequences",
      "schedule": "0 9 * * *"
    }
  ]
}
